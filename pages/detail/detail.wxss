.container{
   padding:0 45rpx 268rpx ;
  
}

.banner{
  height:330rpx;
  margin:40rpx 0;
  border-radius: 36rpx;
}




.title{
   padding:40rpx 0;
   display:flex;
   align-items: center;
}
.choiceCardPage .title image{
  width:52rpx;
  height:43rpx;
  margin-right:20rpx;
}
.choiceGift .title image{
  width:50rpx;
  height:52rpx;
  margin-right:20rpx;
}

.choiceList{
  padding:40rpx 0;
 

  display:flex;
  flex-wrap: wrap
}

.choiceList .choice-item{
  width:185rpx;
  height:113rpx;
  border:6rpx solid transparent;
 
  justify-content: flex-start;
  margin-left:36rpx;
  margin-bottom:36rpx;
  position: relative;
}
.choiceList .choice-item:nth-child(3n+1){
 margin-left:0;
}
.choice-item .item-img{
  width:100%;
  height:100%;
  border-radius: 12rpx;
}
.choice-item .zhezhao{
   width:100%;
   height:100%;
   background-color: #fff;
   opacity: .5;

   position:absolute;
   top:0;
}
.choice-item.active-tag .zhezhao{
   opacity: 0;
  
}
.choice-item.active-tag{
    border:6rpx solid #21ff50;
    border-radius: 16rpx;
}


.choiceGift{
 
}
.gift-item{
   height:100rpx;
   padding:30rpx;
   border:1px solid #ddd;
   color:#999;
   border-radius: 20rpx;
   margin-bottom:30rpx;

   display:flex;
   flex-direction: row;
   justify-content: space-between;
   align-items: center;
}
.gift-item .price{
   display:flex;
   flex-direction: column
}
.gift-item .number{
  margin:0 30rpx;

  font-size:22px;
}
.gift-item .reduce,.gift-item .add{
  font-size:22px;
}

.buy{
  width:100%;
  
  padding:20rpx 0;
  border-top:1px solid #ddd;
  position:fixed;
  bottom:0;
  background-color:#fff; 
}
.buy text{
  display:block;
  text-align: center;
  font-size: 32rpx;
  color:#666
}
.buy text.totalPrice{
  font-size: 40rpx;
  color:#000;
  font-weight: 600;
  margin-bottom:30rpx;
}
.buy button{
  margin:0 20rpx;
  height:100%;
  line-height: 80rpx;
  background-color:#34d155;
  color:#fff;
  opacity: .5
}
.bor-color{
  border:1px solid #34d155;
  color:#34d155;
}
.buy button.btnAct{
  opacity: 1
}

button[disabled][type="default"], wx-button[disabled]:not([type]) {
  background-color:#34d155;
  color:#fff;
}
